<%include ./partials/header %>
<div class="job-details">
    <div class="row">
         <div class="col-1-of-4">
             <h2 class="heading-secondary">Job Details</h2>
         </div>
         
        <div class="col-3-of-4">
            <div class="feature-box">
                <div class="summary">
                 <p><span><%= job.company %></span></p> 
